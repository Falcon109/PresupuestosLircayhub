<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu_Fragment.InicioFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/Titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="@string/TituloResumen"
            android:textAlignment="center"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/PresupuestoTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/PresupuestoTotal2"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Titulo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/PresupuestoGastos"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ico_Arriendo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/cat_arriendo" />

                <ImageView
                    android:id="@+id/ico_Alimentacion"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/cat_alimentacion" />

                <ImageView
                    android:id="@+id/ico_Transporte"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/cat_transporte" />

                <ImageView
                    android:id="@+id/ico_SerBasicos"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/cat_servicios" />

                <ImageView
                    android:id="@+id/ico_Educacion"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/cat_educacion" />

                <ImageView
                    android:id="@+id/ico_Deudas"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/cat_deudas" />

                <ImageView
                    android:id="@+id/ico_Ahorros"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/cat_ahorros" />

                <ImageView
                    android:id="@+id/ico_Otros"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/cat_otros" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ResumenArriendo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="18dp"
                    android:gravity="clip_vertical|center_horizontal"
                    android:text="@string/PresupuestoGastos"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ResumenAlimentacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="18dp"
                    android:gravity="clip_vertical|center_horizontal"
                    android:text="@string/PresupuestoGastos"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ResumenTransporte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="18dp"
                    android:gravity="clip_vertical|center_horizontal"
                    android:text="@string/PresupuestoGastos"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ResumenSerBasicos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="18dp"
                    android:gravity="clip_vertical|center_horizontal"
                    android:text="@string/PresupuestoGastos"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ResumenEducacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="18dp"
                    android:gravity="clip_vertical|center_horizontal"
                    android:text="@string/PresupuestoGastos"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ResumenDeudas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="18dp"
                    android:gravity="clip_vertical|center_horizontal"
                    android:text="@string/PresupuestoGastos"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ResumenAhorros"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="18dp"
                    android:gravity="clip_vertical|center_horizontal"
                    android:text="@string/PresupuestoGastos"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ResumenOtros"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="18dp"
                    android:gravity="clip_vertical|center_horizontal"
                    android:text="@string/PresupuestoGastos"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>